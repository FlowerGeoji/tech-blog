{
    "editor.tabSize": 4,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    "files.associations": {
        "*.css": "tailwindcss"
    },

    "tailwindCSS.experimental.classRegex": [
        ["cn\\(([^)]*)\\)", "\"([^\"]*)\""],
        ["\\[([^\\]]*)\\]", "\"([^\"]*)\""]
    ]
}
